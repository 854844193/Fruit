/**app.wxss**/
page {
  padding: 0;
  margin: 0;
}

.custom {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 45px;
  background: #fff;
  display: flex;
  align-items: center;
  z-index: 999;
}

.custom text {
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  max-width: 280rpx;
}

.empty_custom {
  width: 100%;
}

.van-card {
  background: #fff !important;
  margin-top: 10rpx;
}

.cur {
  font-weight: 600;
  border-bottom: 4rpx solid #fcaf17;
}


.thumbImg {
  width: 174rpx;
  height: 174rpx;
  border: 2rpx solid #ddd;
}

.addCar {
  padding: 10rpx;
  width: 150rpx;
  text-align: center;
  border-radius: 26rpx;
  font-size: 24rpx;
  background: #fcaf17;
  color: #000;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.corbtn {
  display: flex;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.corItem {
  width: 50rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 30rpx;
}

.reduce {
  background: #d3d7d4;
}

.add {
  background: #d3d7d4;
}

