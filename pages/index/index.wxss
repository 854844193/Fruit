/**index.wxss**/
.header {
  width: 100%;
  height: 64px;
  background-color: #45b97c;
  box-sizing: border-box;
  position: relative;
}

.nav {
  width: 100%;
  height: 30px;
  position: absolute;
  left: 30rpx;
  bottom: 14rpx;
}
.navTitle{
  font-weight:bold ;
}

.searchBox {
  position: relative;
  width: 40%;
  height: 30px;
  font-size: 12px;
  margin-left: 40px;
  background: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  border-radius: 15px;
}
.searchText{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-35%,-50%);
}

.alignCenter {
  display: flex;
  align-items: center;
}